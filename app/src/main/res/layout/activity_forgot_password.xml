<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4A4B4D"
        android:text="Reset Password"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/merriweather_bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lora"
        android:padding="20dp"
        android:text="Please enter your email used for login to receive a link to  create a new password via email"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="normal"/>


    <EditText
        android:id="@+id/forgotPassword_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/forgotPassword_sendEmail"
        android:hint="Email"
        android:padding="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
         android:background="@drawable/forget_password_back"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/forgotPassword_sendEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send email"
        android:textColor="#FFFFFF"
        android:background="@drawable/register_button"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="15dp"/>
</LinearLayout>